<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.ThemGHActivity">

    <ImageView
        android:id="@+id/product_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/hinh2" />

    <TextView
        android:id="@+id/product_tensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image_view"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="248dp"
        android:hint="Món ăn 1"
        android:textSize="15dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/product_giasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image_view"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:hint="100.000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/product_motasp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_giasp"

        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_above="@id/btnThemGH">

        <Button
            android:id="@+id/product_botsp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/baseline_minimize_24"
            android:padding="-10dp"
            app:cornerRadius="0dp" />

        <TextView
            android:id="@+id/product_sosp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:hint="1"
            android:padding="15dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/product_themsp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/baseline_add_24"
            android:padding="14dp"
            android:textColor="#4CAF50"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnThemGH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#4CAF50"
        android:text="Thêm vào giỏ hàng"
        app:cornerRadius="10dp" />

</RelativeLayout>