<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivImageGioHang"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tvTenSPGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Món ăn 1"
        android:textSize="20dp"
        android:layout_toRightOf="@id/ivImageGioHang"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvSoTienSPGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số tiền: "
        android:layout_below="@id/tvTenSPGioHang"
        android:layout_toRightOf="@id/ivImageGioHang"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvTienSPGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTenSPGioHang"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_toRightOf="@id/tvSoTienSPGioHang"
        android:hint="100.000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VNĐ"
        android:layout_toRightOf="@id/tvTienSPGioHang"
        android:layout_below="@id/tvTenSPGioHang"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvXacNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Chờ Xác Nhận"
        android:textSize="20dp"
        android:layout_below="@id/tvSoTienSPGioHang"
        android:layout_toRightOf="@id/ivImageGioHang"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng tiền("
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_toRightOf="@id/ivImageGioHang"
        android:layout_below="@id/tvXacNhan"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tvSLSPGioHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="2"
        android:textSize="20dp"
        android:layout_below="@id/tvXacNhan"
        android:layout_toRightOf="@id/tvtt"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Sản Phẩm):"
        android:layout_below="@id/tvXacNhan"
        android:layout_toRightOf="@id/tvSLSPGioHang"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvTongTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="200.000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/tvXacNhan"
        android:layout_toRightOf="@id/tv"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/ivImageGioHang"/>

</RelativeLayout>